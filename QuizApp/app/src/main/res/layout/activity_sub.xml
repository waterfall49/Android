<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F2F2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/quiztitle" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:gravity="right"
            android:paddingRight="20dp"
            android:textColor="#D81B60"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNumberOfQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abel"
            android:gravity="right"
            android:paddingRight="20dp"
            android:textColor="#92520B0E"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivDef"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/def" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="387dp"
            android:layout_height="242dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:textColor="#F8440303"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivAnswer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@drawable/answer" />

        <RadioGroup
            android:id="@+id/rdGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#F8440303" />

            <RadioButton
                android:id="@+id/rbTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#F8440303" />

            <RadioButton
                android:id="@+id/rbThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#F8440303" />

            <RadioButton
                android:id="@+id/rbFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#F8440303" />

        </RadioGroup>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/btnNext"
                android:textColor="#520B0E " />

            <Button
                android:id="@+id/btnFinish"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/btnFinish"
                android:textColor="#520B0E " />
        </TableRow>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>